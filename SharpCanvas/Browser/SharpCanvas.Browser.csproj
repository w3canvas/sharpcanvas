<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net8.0-windows</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <OutputType>Library</OutputType>
    <RootNamespace>SharpCanvas.Browser</RootNamespace>
    <AssemblyName>SharpCanvas.Browser</AssemblyName>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net8.0-windows' ">
    <DefineConstants>WINDOWS</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../Host/SharpCanvas.Host.csproj" />
    <ProjectReference Include="../Interop/SharpCanvas.Interop.csproj" />
    <ProjectReference Include="../Prototype/SharpCanvas.Prototype.csproj" />
    <ProjectReference Include="../SharpCanvas.Core/SharpCanvas.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
  </ItemGroup>

</Project>