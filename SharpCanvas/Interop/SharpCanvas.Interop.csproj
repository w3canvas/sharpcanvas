<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net8.0-windows;net472;net45</TargetFrameworks>
    <OutputType>Library</OutputType>
    <RootNamespace>SharpCanvas.Interop</RootNamespace>
    <AssemblyName>SharpCanvas.Interop</AssemblyName>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <LangVersion>latest</LangVersion>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net8.0-windows' ">
    <DefineConstants>WINDOWS</DefineConstants>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="HTMLDispIDs.cs" />
    <Compile Include="IHTMLDocument4.cs" />
    <Compile Include="IHTMLEventObj2.cs" />
    <Compile Include="IHTMLPaintSite.cs" />
    <Compile Include="IHTMLRenderStyle.cs" />
    <Compile Include="IHTMLScriptElement.cs" />
    <Compile Include="INode.cs" />
    <Compile Include="IStyleSupported.cs" />
    <Compile Include="InteropDefs.cs" />
    <Compile Include="MSHtml.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net8.0-windows' ">
    <Compile Include="IHTMLElementBase.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' != 'net45' ">
    <PackageReference Include="Jint" Version="4.4.1" />
  </ItemGroup>

</Project>
