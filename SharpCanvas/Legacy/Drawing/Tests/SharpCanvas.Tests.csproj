<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0-windows;net472;net45</TargetFrameworks>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <UseWindowsForms>true</UseWindowsForms>
    <OutputType>Library</OutputType>
    <RootNamespace>SharpCanvas.Tests</RootNamespace>
    <AssemblyName>SharpCanvas.Tests</AssemblyName>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="backdrop.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="pet.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="picture_frame.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="rhino.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="wallpaper.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\SharpCanvas.csproj" />
    <ProjectReference Include="..\..\Browser\SharpCanvas.Browser.csproj" />
    <ProjectReference Include="..\..\..\Host\SharpCanvas.Host.csproj" />
    <ProjectReference Include="..\..\..\Interop\SharpCanvas.Interop.csproj" />
    <ProjectReference Include="..\..\..\Prototype\SharpCanvas.Prototype.csproj" />
    <ProjectReference Include="..\..\..\Bitmap.Filter\SharpCanvas.Bitmap.Filter.csproj" />
    <ProjectReference Include="..\..\..\SharpCanvas.Core\SharpCanvas.Core.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' != 'net45' ">
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Drawing" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.2.0" />
    <PackageReference Include="NUnit" Version="3.13.3" />
    <PackageReference Include="NUnit3TestAdapter" Version="4.2.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Tests.Drawing2D\**\*.cs" />
  </ItemGroup>

</Project>