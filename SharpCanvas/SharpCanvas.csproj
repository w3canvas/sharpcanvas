<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0-windows;net472;net45</TargetFrameworks>
    <OutputType>Library</OutputType>
    <RootNamespace>SharpCanvas</RootNamespace>
    <AssemblyName>SharpCanvas</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net8.0-windows' ">
    <DefineConstants>WINDOWS</DefineConstants>
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="Interop\SharpCanvas.Interop.csproj" />
    <ProjectReference Include="Prototype\SharpCanvas.Prototype.csproj" />
  </ItemGroup>

</Project>