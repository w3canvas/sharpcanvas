<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net8.0-windows;net472;net45</TargetFrameworks>
    <OutputType>Library</OutputType>
    <RootNamespace>SharpCanvas.Host</RootNamespace>
    <AssemblyName>SharpCanvas.Host</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net8.0-windows' or '$(TargetFramework)' == 'net472' or '$(TargetFramework)' == 'net45' ">
    <DefineConstants>WINDOWS</DefineConstants>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Test\Test.htm" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../Interop/SharpCanvas.Interop.csproj" />
    <ProjectReference Include="../Prototype/SharpCanvas.Prototype.csproj" />
    <ProjectReference Include="../SharpCanvas.Core/SharpCanvas.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="window\AssemblyLocator.cs" />
    <Compile Include="window\CanvasProxy.cs" />
    <Compile Include="window\Standalone.cs" />
    <Compile Include="window\StandaloneBootstrapper.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net8.0-windows' or '$(TargetFramework)' == 'net472' or '$(TargetFramework)' == 'net45' ">
    <ProjectReference Include="../Bitmap.Filter/SharpCanvas.Bitmap.Filter.csproj" />
    <Compile Include="window\FilterProxy.cs" />
    <Compile Include="mshtml\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' != 'net45' ">
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Drawing" />
  </ItemGroup>

</Project>